<body>

<div id="chatbox">
  <div id="header">ðŸŒ¾ Agriculture Assistant</div>
  <div id="messages"></div>
  <div id="input">
    <input id="text" placeholder="Ask about crops, soil, pests..." />
    <button onclick="send()">Send</button>
  </div>
</div>

<script>
const messages = document.getElementById("messages");

async function send() {
  const text = document.getElementById("text").value;
  if (!text) return;

  messages.innerHTML += `<div class="msg user">You: ${text}</div>`;
  document.getElementById("text").value = "";

  const res = await fetch("https://YOUR_WORKER_URL", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify({ message: text })
  });

  const data = await res.json();
  messages.innerHTML += `<div class="msg bot">AgriBot: ${data.reply}</div>`;
  messages.scrollTop = messages.scrollHeight;
}
</script>

